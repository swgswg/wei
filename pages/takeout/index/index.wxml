            <view>
                <view class='near'>
                    <view class='near-line'></view>
                    <view class='near-shop'>为你优选</view>
                    <view class='near-line'></view>
                </view>
                <view class='guanggao'>
                    <block wx:for="{{6}}">
                        <image class='guanggao-img'></image>
                    </block>
                </view>
            </view>
            <view class='near'>
                <view class='near-line'></view>
                <view class='near-shop'>优质商家</view>
                <view class='near-line'></view>
            </view>
            <view class='select'>
                <!-- <view class='select-each'>
                    <view class='select-text'> 综合排序</view>
