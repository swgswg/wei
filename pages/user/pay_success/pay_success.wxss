page{
    background-color: #f0f0f0;
}
.content{
    background-color: #fff;
    width: 100%;
    height: 100%;
    margin-top: 20rpx;
    padding:36rpx 20rpx;
    box-sizing: border-box;
}
.pay-success{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-bottom:2rpx solid #bbb;
}
.pay-success-img{
    width: 160rpx;
    height: 160rpx;
}
.pay-success-text{
    margin : 32rpx 0 32rpx 0; 
    font-size: 40rpx;
    color: #333;
}
.order-info{
    width: 100%;
    height: 100%;
    padding: 20rpx;
    box-sizing: border-box;
}
.order-info-font1{
    font-size: 30rpx;
    color: #333;
}
.order-info-font2{
    margin-top: 20rpx;
    font-size: 24rpx;
    color: #999;
}
.btn{
    display: flex;
    justify-content: space-around;
    margin-top: 50rpx;
}
.btn1,.btn2{
    width: 318rpx;
    height: 70rpx;
    font-size: 35rpx;
    text-align: center;
    line-height: 70rpx;
    border-radius: 10rpx;    
}
.btn1{
    background-color: red;
    color: #fff;
}
.btn2{
    border: 4rpx solid #aaa;
    color: #999;
}