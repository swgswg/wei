<view class="content">
    <scroll-view scroll-y style='width:100%;height:100%'>
        <view class='title'>完成信息即可开店</view>
        <form bindsubmit="formSubmit">
            <view class="from-each">
                <view class="from-each-title">运营人姓名:</view>
                <view class="from-each-input"><input name="business_name" placeholder='请填写您的姓名'></input></view>
            </view>
            <view class="from-each">
                <view class="from-each-title">您的电话:</view>
                <view class="from-each-input"><input name="business_tel" placeholder='请填写您的手机号'></input></view>
            </view>
            <view class="from-each">
                <view class="from-each-title">店铺名称</view>
                <view class="from-each-input"><input name="shop_name" placeholder='请填写您的店铺名称'></input></view>
            </view>
            <view class="from-each">
                <view class="from-each-title">请填写您的银行账户信息</view>
                <view class="from-each-input"><input name="bank_number" placeholder='请填写您的银行卡号'></input></view>
                <view class="from-each-input"><input name="bank_address" placeholder='请填写您的开户行地址'></input></view>
            </view>
            <view class="from-each">
                <view class="from-each-title">店铺分类</view>
                <view class="from-each-input">
                    <radio-group name="shop_cate" class="radio-group" bindchange="radioChange">
                        <label class="radio" wx:for="{{[1,2,3,4]}}">
                            <radio value="" checked=""/>手机
                        </label>
                    </radio-group>
                </view>
            </view>
            <view class="from-each">
                <view class="from-each-title">店铺标签</view>
                <view class="from-each-input">
                    <checkbox-group name="shop_tab" bindchange="checkboxChange">
                        <label class="checkbox" wx:for="{{[1,2,3]}}">
                            <checkbox value="" checked=""/>全面屏
                        </label>
                    </checkbox-group>
                </view>
            </view>    
            <view class="from-each">
                <view class="from-each-title">店铺简介</view>
                <view class="from-each-input">
                    <textarea name="shop_description" placeholder='请描述您的店铺'></textarea>
                </view>
            </view>
            <view class="from-each">
                <view class="from-each-title">身份证号</view>
                <view class="from-each-input"><input name="ID_cart" placeholder='请填写您的身份证号码'></input></view>
            </view>
            <view class="from-each">
                <view class="from-each-title">上传您的手持身份证照片(点击图片上传) </view>
                <view class="from-each-input from-each-image">
                    <image src="../../../images/timg.jpg" />
                </view>
            </view>
            <button type='primary' form-type="submit" >提交</button>
        </form>    
    </scroll-view>
</view>