/**mallcart.wxss**/

.swiper {
  width: 100%;
  position: relative;
  padding-bottom: 75%;
}

.swiper swiper {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.swiper image {
  width: 100%;
  height: 100%;
}

.swiper .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.swiper .dots .dot {
  margin: 0 8rpx;
  width: 16rpx;
  height: 16rpx;
  background: #fff;
  border-radius: 8rpx;
  transition: all 0.6s;
}

.swiper .dots .dot.active {
  width: 16rpx;
  background: #f00;
}

page .wx-swiper-dot {
  width: auto;
  vertical-align: top;
  margin: 0 3px;
}

page .wx-swiper-dot::before {
  content: '';
  -webkit-transition: all 0.5s ease;
  background: #ccc;
  width: 5px;
  height: 5px;
  display: inline-block;
  border-radius: 7px;
}

page .wx-swiper-dot-active::before {
  width: 10px;
  background: #09bb07;
}

page .wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: 5px;
}

.cuxiao {
  background: #e64340;
  color: #fff;
  border-radius: 3px;
  font-size: 12px;
  display: inline-block;
