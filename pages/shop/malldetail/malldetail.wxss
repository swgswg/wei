}

.notempty {
  position: relative;
}

.notempty::after {
  content: "";
  display: block;
  width: 9px;
  height: 9px;
  border: 1px solid #fff;
  border-radius: 50%;
  background: #e64340;
  position: absolute;
  top: 5px;
  right: 50%;
  margin-right: -16px;
}

