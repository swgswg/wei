/* mallcart.wxss */

.mallcart-title {
    padding: 10px;
    background: #fff;
}

.mallcart-del {
    width: 30px;
    text-align: center;
}

.radio {
    width: 30px;
    text-align: center;
}

.cart-item {
    padding: 15px 10px;
    box-sizing: border-box;
    background: #fff;
    margin-top: 5px;
}

.cart-img {
    width: 100px;
    height: 100px;
    display: block;
    margin-right: 8px;
}

.cart-title {
    line-height: 140%;
}

.count-set {
    width: auto;
    border: 1px solid #eee;
}
/* .sub{
    width: 70rpx;
    height: 50rpx;
} */
.count-set text {
    display: block;
    line-height: 30px;
    padding: 0 15px;
}

.buy-couts {
    border-left: 1px solid #eee;
    border-right: 1px solid #eee;
    width: 50px;
    height: 30px;
}

.count-set .flase {
    background: rgba(0, 0, 0, 0.05);
    color: #999;
}

/* .mallcart-float{ height: 46px; border: 1rpx solid red;} */

.mallcart-foot {
    position: fixed;
    z-index: 999;
    left: 0;
    bottom: 100rpx;
    width: 100%;
    height: 46px;
    line-height: 46px;
    background: #fff;
}

.mall-cart-sum {
    line-height: 18px;
    padding-top: 5px;
}

.mall-cart-btn {
    background: #e64340;
    display: block;
    color: #fff;
    padding: 0 30px;
    border-radius: 0;
}

.guige {
    width: 300rpx;
    height: 100%;
    font-size: 25rpx;
    background-color: #f0f0f0;
    border-radius: 10rpx;
    border: 1rpx solid #f0f0f0;
    
}
