/* mallcart.wxss */

/* 基本框架样式 */

.cate-con, .sidebar {
  overflow: hidden;
  overflow-y: auto;
  -webkit-oveflow-scrolling: touch;
}

page {
  width: 100%;
  height: 100%;
}

.cate {
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.search {
  width: 100%;
  z-index: 9;
  background: -webkit-linear-gradient(top, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0));
  background: linear-gradient(top, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0));
  position: relative;
  z-index: 1;
  box-shadow: 0 0 15rpx rgba(0, 0, 0, 0.1);
}

.search-box {
  background: #fff;
  border-radius: 6rpx;
  width: 100%;
}

.search-input {
  height: 80rpx;
  padding: 0 20rpx;
  text-align: center;
  vertical-align: top;
}

button.search-btn {
  background: none;
  padding: 0 1em;
}

button.search-btn icon {
  vertical-align: top;
  margin-top: 22rpx;
}

.search-btn::after {
  display: none;
}

.cate-box {
  overflow: hidden;
  padding-left: 160rpx;
  position: relative;
}

.sidebar {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 160rpx;
  background: #fff;
}

.cate-name {
  line-height: 92rpx;
  position: relative;
}

.cate-name-active::after {
  content: "";
  display: block;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  border-left: 2px solid;
}

.cate-con {
  width: 100%;
  height: 100%;
}

.cate-tit {
  margin-left: 16rpx;
  color: #6a6a6a;
  height: 92rpx;
  line-height: 92rpx;
}

.cate-list {
  margin: 0 16rpx;
  background: #fff;
  padding: 30rpx 10rpx;
}

.cate-item {
  width: 33.33333%;
  float: left;
}

.cate-item:nth-child(n+4) {
  margin-top: 16rpx;
}

.cate-imgbox {
  padding-bottom: 70%;
  width: 30%;
  margin: 0 5%;
  position: relative;
}

.cate-img {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.cate-txt {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin: 10rpx 0 0;
}

/*绿色*/

.cate-name-active {
  color: #09bb07;
}

.cate-name-active::after {
  border-left-color: #09bb07;
}

/*格式化  */
.flex {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  padding: 10rpx 10rpx 20rpx 10rpx;
  box-sizing: border-box; 
  /* background-color: #fff; */

  
}

.flex1 {
  display: flex;
  justify-content:  flex-start;
  width: 100%;
  height: 200rpx;
  background-color: #fff;
